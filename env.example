# Client Environment Variables
REACT_APP_BACK_URL=http://localhost/api
REACT_APP_S3_URL=https://your-s3-bucket.s3.amazonaws.com
REACT_APP_CHANNELTALK_PLUGIN_KEY=your-channeltalk-key
REACT_APP_GA_TRACKING_ID=your-ga-tracking-id

# Server Environment Variables
NODE_ENV=production
SESSION_KEY=your-session-key-here
PORT=80

# SPARCS SSO (Optional)
SPARCSSSO_CLIENT_ID=your-sparcs-sso-client-id
SPARCSSSO_CLIENT_KEY=your-sparcs-sso-client-key

# Frontend URL
FRONT_URL=http://localhost

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Database
DB_PATH=mongodb://mongodb:27017/taxi

# Optional
REDIS_PATH=redis://redis:6379
JWT_SECRET_KEY=your-jwt-secret-key
APP_URI_SCHEME=taxi://
